{
  "name": "Remote Backups",
  "version": "0.3.2",
  "slug": "remote_backups",
  "description": "Exploit snapshots and SCP to create remote backups to specified server",
  "url": "https://github.com/DesaiSamir/my-remote-backup",
  "startup": "once",
  "boot": "manual",
  "hassio_api": true,
  "hassio_role": "backups",
  "map": ["backups:rw"],
  "image": "fixated/remote-backup-{arch}",
  "options": {
    "ssh_host": "",
    "ssh_port": 22,
    "ssh_user": "",
    "ssh_key": [],
    "ssh_options": "",
    "remote_directory": "",
    "zip_password": "",
    "keep_local_backup": ""
  },
  "schema": {
    "ssh_host": "str",
    "ssh_port": "int",
    "ssh_user": "str",
    "ssh_key": ["str"],
    "ssh_options": "str",
    "remote_directory": "str",
    "zip_password": "str",
    "keep_local_backup": "match(^(all|[+]?\\d*)$)"
  }
}
